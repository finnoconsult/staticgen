		//- 		= __("InnovaciosLogoSubtitle")
		//- 		| #[u.nn nn]
		//- 		= __("InnovaciosLogoSubtitle2")

block navigation
	include ./navigation

block footerlinks
	include ./footerlinks

append scripts
	include ./hotjar
